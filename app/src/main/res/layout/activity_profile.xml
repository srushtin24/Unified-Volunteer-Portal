<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Top Black Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"
            android:padding="16dp">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/volkhov_bold_italic"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/logout_icon"
                android:contentDescription="Logout"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside" />

        </RelativeLayout>

        <!-- Curved White Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="-66dp"
            android:background="@drawable/curved_content_background"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pfp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/user_profile_img"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.226"/>



            <EditText
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:hint="Name"
                android:inputType="textPersonName"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="#888888" />

            <EditText
                android:id="@+id/profile_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Status"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="#888888" />

<!--            <EditText-->
<!--                android:id="@+id/profile_dob"-->
<!--                android:hint="dob"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textColorHint="#888888"-->
<!--                android:inputType="date" />-->

<!--            <EditText-->
<!--                android:id="@+id/profile_contact"-->
<!--                android:hint="Contact"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textColorHint="#888888"-->
<!--                android:inputType="phone" />-->

<!--            <AutoCompleteTextView-->
<!--                android:id="@+id/profile_gender"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textColorHint="#888888"-->
<!--                android:hint="Gender" />-->

<!--            <AutoCompleteTextView-->
<!--                android:id="@+id/profile_bloodGroup"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textColorHint="#888888"-->
<!--                android:hint="Select Blood Group"-->
<!--                android:inputType="none"-->
<!--                android:dropDownHeight="wrap_content"/>-->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/donebut"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:text="Save"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <!-- Fixed Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottom_status_bar"
        android:layout_width="440dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/curved_bottombar"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_icon"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside" />
    </LinearLayout>

</FrameLayout>











