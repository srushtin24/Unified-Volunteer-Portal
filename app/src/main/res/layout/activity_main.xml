<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- Curved White Content Area -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/black"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/volkhov_bold_italic"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-66dp"
                android:background="@drawable/curved_content_background"
                android:orientation="vertical"
                android:padding="30dp">

                <!--events-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">


                    <LinearLayout
                        android:id="@+id/clkevents"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/events"
                            android:scaleType="centerInside"
                            android:src="@drawable/calendar_check_regular" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="@string/events"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!--nss units-->


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clknssunits"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/nssunits"
                            android:scaleType="centerCrop"
                            android:src="@drawable/handshake_angle_solid" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="@string/nssunits"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--gallery-->


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clkgallery"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/gallery"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image_regular" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="@string/gallery"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--            certificates-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clkcertificate"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/certificate"
                            android:scaleType="centerCrop"
                            android:src="@drawable/certificate_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="BADGE"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!--about us-->


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clkaboutus"
                        android:layout_width="match_parent"
                        android:layout_height="109dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/aboutus"
                            android:scaleType="centerCrop"
                            android:src="@drawable/circle_info_solid" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="@string/aboutus"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--chats-->


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clkvideotutorial"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/feedback"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video_tutorial" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="VIDEO TUTORIAL"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <!--developers-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_margin="12dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/clkaboutdev"
                        android:layout_width="match_parent"
                        android:layout_height="115dp"
                        android:layout_marginBottom="27dp"
                        android:background="@drawable/home_blocks"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/aboudev"
                            android:scaleType="centerCrop"
                            android:src="@drawable/code_solid" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="@string/aboudev"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottom_status_bar"
        android:layout_width="440dp"
        android:layout_height="75dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/curved_bottombar"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginBottom="0dp">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_icon"
            android:contentDescription="Profile"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside" />
    </LinearLayout>




</FrameLayout>













































